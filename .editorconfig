# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Default settings
[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

# TypeScript and React files
[*.{ts,tsx,js,jsx}]
indent_style = space
indent_size = 2
end_of_line = crlf

# JSON files
[*.json]
indent_style = space
indent_size = 2
end_of_line = crlf

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2
end_of_line = crlf

# CSS files
[*.css]
indent_style = space
indent_size = 2
end_of_line = crlf

# HTML files
[*.html]
indent_style = space
indent_size = 2
end_of_line = crlf

# Markdown files
[*.md]
end_of_line = lf
trim_trailing_whitespace = false

# Configuration files
[*.{editorconfig,gitignore,gitattributes,prettierrc}]
end_of_line = lf

# Package files
[package.json]
indent_style = space
indent_size = 2
end_of_line = crlf

[package-lock.json]
indent_style = space
indent_size = 2
end_of_line = crlf